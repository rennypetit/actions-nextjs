{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,

    "types": ["jest", "@testing-library/jest-dom"],
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
    }
  },
  "include": [
  "src/**/*.ts",
  "core/**/*.ts",
  "src/**/*.tsx",
  "tests/**/*.ts",
  "tests/**/*.tsx",
  "__tests__/**/*.ts",
  "__tests__/**/*.tsx",
  ".next/types/**/*.ts",
  "src/**/*.text.tsx",
  "src/**/*.text.ts",
],
  "exclude": [
    "node_modules"
  ]
}
